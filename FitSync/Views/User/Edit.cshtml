@model FitSync.Models.User

@{
    ViewBag.Title = "Edit";
}

<div class="container-fluid">
    <div class="page-titles">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Profile</a></li>
        </ol>
    </div>
    <div class="row">
        <div class="col-xl-12 col-xxl-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Profile</h4>
                    <div class="float-right">
                        <!-- Added float-right class here -->
                        <a href="/Home/Index" class="btn btn-rounded btn-warning btn-xs">
                            <span class="btn-icon-left text-info">
                                <i class="fa fa-arrow-left color-info"></i>
                            </span>Back
                        </a>
                    </div>
                </div>
                <div class="card-body">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label class="col-form-label-sm">Name</label>
                                    <div class="input-group input-group-sm">
                                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                    <small class="d-block">@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })</small>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="col-form-label-sm">Date of Birth</label>
                                    <div class="input-group input-group-sm">
                                        @Html.EditorFor(model => model.DateOfBirth, new { htmlAttributes = new { @class = "form-control", type = "date", @Value = Model.DateOfBirth.ToString("yyyy-MM-dd") } })
                                    </div>
                                    <small class="d-block">@Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "text-danger" }) </small>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="col-form-label-sm">Email</label>
                                    <div class="input-group input-group-sm">
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", type = "email" } })
                                    </div>
                                    <small class="d-block">@Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })</small>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="col-form-label-sm">Telephone</label>
                                    <div class="input-group input-group-sm">
                                        @Html.EditorFor(model => model.Telephone, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                    <small class="d-block">@Html.ValidationMessageFor(model => model.Telephone, "", new { @class = "text-danger" })</small>
                                </div>

                                <div class="form-group col-md-4">
                                    <label class="col-form-label-sm">Weight</label>
                                    <div class="input-group input-group-sm">
                                        @Html.EditorFor(model => model.Weight, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                    <small class="d-block">@Html.ValidationMessageFor(model => model.Weight, "", new { @class = "text-danger" })</small>
                                </div>

                                <div class="form-group col-md-4">
                                    <label class="col-form-label-sm">Height</label>
                                    <div class="input-group input-group-sm">
                                        @Html.EditorFor(model => model.Height, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                    <small class="d-block">@Html.ValidationMessageFor(model => model.Height, "", new { @class = "text-danger" })</small>
                                </div>

                                <div class="form-group col-md-4">
                                    <label class="col-form-label-sm">Height</label>
                                    <div class="input-group input-group-sm">
                                        @Html.EditorFor(model => model.BloodType, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                    <small class="d-block">@Html.ValidationMessageFor(model => model.BloodType, "", new { @class = "text-danger" })</small>
                                </div>

                                <div class="form-group col-md-6">
                                    <label class="col-form-label-sm">Daily Calorie Goal</label>
                                    <div class="input-group input-group-sm">
                                        @Html.EditorFor(model => model.DailyCalorieGoal, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                    <small class="d-block">@Html.ValidationMessageFor(model => model.DailyCalorieGoal, "", new { @class = "text-danger" })</small>
                                </div>

                                <div class="form-group col-md-6">
                                    <label class="col-form-label-sm">Daily Exercise Goal</label>
                                    <div class="input-group input-group-sm">
                                        @Html.EditorFor(model => model.DailyExerciseGoal, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                    <small class="d-block">@Html.ValidationMessageFor(model => model.DailyExerciseGoal, "", new { @class = "text-danger" })</small>
                                </div>

                                <div class="form-group col-md-12">
                                    <label class="col-form-label-sm">Activity Factor</label>
                                    <div class="input-group input-group-sm">
                                        <select id="activityFactor" name="activityFactor" class="form-control form-control-sm">
                                            <option value="1.2"  @(Model.ActivityFactor == 1.2 ? "selected" : "")>Sedentary (Little to no exercise)</option>
                                            <option value="1.375" @(Model.ActivityFactor == 1.375 ? "selected" : "")>Lightly Active (Light exercise/sports 1-3 days per week)</option>
                                            <option value="1.55" @(Model.ActivityFactor == 1.55 ? "selected" : "")>Moderately Active (Moderate exercise/sports 3-5 days per week)</option>
                                            <option value="1.725" @(Model.ActivityFactor == 1.725 ? "selected" : "")>Very Active (Hard exercise/sports 6-7 days per week)</option>
                                            <option value="1.9" @(Model.ActivityFactor == 1.9 ? "selected" : "")>Extra Active (Very hard exercise/sports & physical job or 2x training)</option>
                                        </select>
                                    </div>
                                    <small class="d-block"> @Html.ValidationMessageFor(model => model.ActivityFactor, "", new { @class = "text-danger" })</small>
                                </div>


                            </div>
                            <div class="form-group">
                                <div class="col-lg-12 align-items-right">
                                    <div class="float-right">
                                        <!-- Added float-right class here -->
                                        <button type="submit" class="btn btn-rounded btn-primary">
                                            <span class="btn-icon-left text-primary">
                                                <i class="fa fa-save"></i>
                                            </span>Update
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                   }

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}