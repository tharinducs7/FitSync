@model FitSync.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View</title>
    <link href="~/Assets/css/style.css" rel="stylesheet">
</head>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <body class="h-100">
        <div class="authincation h-100">
            <div class="container h-100">
                <div class="row justify-content-center h-100 align-items-center">
                    <div class="col-md-6">
                        <div class="authincation-content">
                            <div class="row no-gutters">
                                <div class="col-xl-12">
                                    <div class="auth-form">
                                        <h4 class="text-center mb-4">Sign up your account</h4>

                                        @using (Html.BeginForm())
                                        {
                                            @Html.AntiForgeryToken()

                                    <div class="form-horizontal">

                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                        <div class="form-group">
                                            @*<label class="col-form-label-sm">Name</label>*@
                                            <div class="input-group input-group-sm mb-3">
                                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter name", @Value = "John Doe" } })
                                            </div>
                                            <small class="d-block">  @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" }) </small>
                                        </div>

                                        <div class="form-group">
                                            @*<label class="col-form-label-sm">Name</label>*@
                                            <div class="input-group input-group-sm mb-3">
                                                @Html.EditorFor(model => model.DateOfBirth, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter date of birth",@Value = "1994-01-27" } })
                                            </div>
                                            <small class="d-block">  @Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "text-danger" })  </small>
                                        </div>

                                        <div class="form-group">
                                            @*<label class="col-form-label-sm">Name</label>*@
                                            <div class="input-group input-group-sm mb-3">
                                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter email", @Value = "example@example.com" } })
                                            </div>
                                            <small class="d-block">  @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" }) </small>
                                        </div>

                                        <div class="form-group">
                                            @*<label class="col-form-label-sm">Name</label>*@
                                            <div class="input-group input-group-sm mb-3">
                                                @Html.EditorFor(model => model.Telephone, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter telephone", @Value = "0779920071" } })
                                            </div>
                                            <small class="d-block"> @Html.ValidationMessageFor(model => model.Telephone, "", new { @class = "text-danger" }) </small>
                                        </div>

                                        <div class="form-group">
                                            @*<label class="col-form-label-sm">Name</label>*@
                                            <div class="input-group input-group-sm mb-3">
                                                @Html.EditorFor(model => model.Weight, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter weight", @Value = "60" } })
                                            </div>
                                            <small class="d-block">   @Html.ValidationMessageFor(model => model.Weight, "", new { @class = "text-danger" })</small>
                                        </div>

                                        <div class="form-group">
                                            @*<label class="col-form-label-sm">Name</label>*@
                                            <div class="input-group input-group-sm mb-3">
                                                @Html.EditorFor(model => model.Height, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter height", @Value = "160" } })
                                            </div>
                                            <small class="d-block">   @Html.ValidationMessageFor(model => model.Height, "", new { @class = "text-danger" }) </small>
                                        </div>


                                        <div class="form-group">
                                            @*<label class="col-form-label-sm">Name</label>*@
                                            <div class="input-group input-group-sm mb-3">
                                                @Html.EditorFor(model => model.BloodType, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter blood type", @Value = "O+" } })
                                            </div>
                                            <small class="d-block">   @Html.ValidationMessageFor(model => model.BloodType, "", new { @class = "text-danger" }) </small>
                                        </div>

                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-10">
                                                <input type="submit" value="Create" class="btn btn-default" />
                                            </div>
                                        </div>
                                    </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
