@model FitSync.Models.WorkoutActivity

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="page-titles">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Components</a></li>
        </ol>
    </div>
    <div class="row">
        <div class="col-xl-12">
            <div class="card bg-light plan-list">
                <div class="card-header">
                    <h5 class="card-title">Delete Activity</h5>
                    <div class="float-right">
                        <!-- Added float-right class here -->
                        <a href="/WorkoutActivity" class="btn btn-rounded btn-warning btn-xs">
                            <span class="btn-icon-left text-info">
                                <i class="fa fa-arrow-left color-info"></i>
                            </span>Back
                        </a>
                    </div>
                </div>
                <div class="card-body mb-0">

                    <div class="d-flex px-3 pt-3 list-row flex-wrap align-items-center mb-2 bg-white">
                        <div class="list-icon mr-3 mb-3">
                            <p class="fs-24 text-black mb-0 mt-2"> @Model.DateTime.Day</p>
                            <span class="fs-14 text-black"> @Model.DateTime.ToString("ddd")</span>
                        </div>
                        <div class="info mb-3">
                            <h4 class="fs-20 "><a href="workout-statistic.html" class="text-black"> Cycling </a></h4>
                            <span class="text-primary font-w600">FINISHED</span><span class="pl-3 pr-3">34Km</span>
                            <span> @Model.DurationInMinutes </span>
                            @*<small>@item.DateTime.ToString("dd/MMM/yyyy")</small>*@
                        </div>
                        <div class="d-flex mb-3 mr-auto pl-3 pr-3 align-items-center">
                            <img src="~/Assets/icons/workouts/@(Model.WorkoutType).svg" alt="SVG" />
                            <span class="text-secondary ml-2">@Model.WorkoutType</span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-12 align-items-right">
                            <div class="float-right">

                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    <button type="submit" class="btn btn-rounded btn-danger" onclick="return confirm('Are you sure you want to delete this workout activity?');">
                                        <span class="btn-icon-left text-danger">
                                            <i class="fa fa-trash"></i>
                                        </span>Delete
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>